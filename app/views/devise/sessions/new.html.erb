<div class="container">
  <h2 class="text-center mt-4">To-Do App</h2>
  <p class="text-center text-muted">Por favor, entre na sua conta</p>
  <div class="d-flex justify-content-center align-items-center">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="card shadow-sm" style="min-width: 500px; min-height: 280px">
        <div class="card-body">
          <% if flash[:alert] %>
            <div class="alert alert-danger">
              <%= flash[:alert] %>
            </div>
          <% end %>

          <div class="mb-3">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, class: "form-control", required: true, autofocus: true, autocomplete: "email", placeholder: "Digite seu e-mail" %>
          </div>

          <div class="mb-5">
            <%= f.label :senha, class: "form-label" %>
            <%= f.password_field :password, class: "form-control", required: true, autocomplete: "current-password", placeholder: "Digite sua senha" %>
          </div>

          <div class="d-grid">
            <%= f.submit "Entrar", class: "btn btn-primary btn-lg" %>
          </div>

          <div class="text-center mt-3">
            <p>NÃ£o possui um cadastro? <%= link_to 'Registre-se aqui', new_registration_path(resource_name) %></p>
          </div>
        </div>
      </div>

    <% end %>
  </div>
</div>
