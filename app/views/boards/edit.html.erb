<div class="container mt-5">
  <h1>Editar Quadro</h1>
  <%= form_with model: @board, local: true do |form| %>
    <div class="mb-3">
      <%= form.label :name, "Nome do Quadro", class: "form-label" %>
      <%= form.text_field :name, class: "form-control", placeholder: "Digite o novo nome do quadro" %>
    </div>
    <div class="d-flex gap-2">
      <%= form.submit "Salvar", class: "btn btn-primary" %>
      <%= link_to "Cancelar", root_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>
